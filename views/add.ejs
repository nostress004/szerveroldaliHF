<% include header %>
    <!-- Add -->
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12 m6 push-l3 push-m3">
                    <div class="card blue-grey darken-1 center-align">
                        <div class="card-content white-text">
                            <span class="card-title">Add new item</span>
                            <form action="/pizza/add" method="POST">
                                <div class='row'>
                                    <form class="col s12">
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">local_pizza</i>
                                                <input name="name" id="icon_prefix" type="text" class="validate">
                                                <label for="icon_prefix">Name</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">gesture</i>
                                                <input name="description" id="icon_telephone" type="text" class="validate">
                                                <label for="icon_telephone">Description</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">money</i>
                                                <input name="price" id="icon_telephone" type="number" class="validate">
                                                <label for="icon_telephone">Price</label>
                                            </div>
                                    </form>
                                    </div>
                                    <hr>
                                    <div class="card-action">
                                        <a class="waves-effect waves-light btn-large" href="admin-menu.html">Add</a>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
    </main>
    <% include footer %>