<% include header %>
<!-- Profile -->
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12 m6 push-l3 push-m3">
                    <div class="card blue-grey darken-1 center-align">
                        <div class="card-content white-text">
                            <span class="card-title">John's profile</span>
                            <form action="" method="post">
                                <div class='row'>
                                    <form class="col s12">
                                        <div class="row">
                                            <div class="input-field col s6">
                                                <i class="material-icons prefix">account_circle</i>
                                                <input id="icon_prefix" type="text" class="validate" placeholder="John">
                                                <label for="icon_prefix">First Name</label>
                                            </div>
                                            <div class="input-field col s6">
                                                <i class="material-icons prefix">account_circle</i>
                                                <input id="icon_telephone" type="tel" class="validate" placeholder="Doe">
                                                <label for="icon_telephone">Last Name</label>
                                            </div>
                                            <div class="input-field col s6">
                                                <i class="material-icons prefix">account_circle</i>
                                                <input id="icon_telephone" type="tel" class="validate" placeholder="johndoe">
                                                <label for="icon_telephone">Username</label>
                                            </div>
                                            <div class="input-field col s6">
                                                <i class="material-icons prefix">home</i>
                                                <input id="icon_telephone" type="tel" class="validate" placeholder="Budapest">
                                                <label for="icon_telephone">Adress</label>
                                            </div>
                                        </div>

                                        <div class='row'>
                                            <div class='input-field col s6'>
                                                <i class="material-icons prefix">email</i>
                                                <input id="icon_prefix2" type="email" class="validate" placeholder="johndoe@gmail.com">
                                                <label for="icon_prefix2">E-mail</label>
                                            </div>
                                            <div class='input-field col s6'>
                                                <i class="material-icons prefix">phone</i>
                                                <input id="icon_prefix2" type="email" class="validate" placeholder="+3623555-5555">
                                                <label for="icon_prefix2">Phone</label>
                                            </div>
                                        </div>
                                        <div class='row'>
                                            <div class='input-field col s6'>
                                                <i class="material-icons prefix">vpn_key</i>
                                                <input id="icon_prefix3" type="password" class="validate" placeholder="********">
                                                <label for="icon_prefix3">New password</label>
                                            </div>
                                            <div class='input-field col s6'>
                                                <i class="material-icons prefix">vpn_key</i>
                                                <input id="icon_prefix4" type="password" class="validate" placeholder="********">
                                                <label for="icon_prefix4">Re-type new password</label>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <hr>
                                <div class="card-action">
                                    <a class="waves-effect waves-light btn-large" href="#">Save changes</a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
    </main>
    <% include footer %>