<% include header %>
<!-- Login -->
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12 m6 push-l3 push-m3">
                    <div class="card blue-grey darken-1 center-align">
                        <div class="card-content white-text">
                            <span class="card-title">Reset password</span>
                            <form action="/forgotten" method="POST">
                                <span class="card-content">We are going to send an e-mail to the following address</span>
                                <div class='row'>
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">email</i>
                                        <input type="email" name="forgottenemail" id="icon_prefix" class="validate">
                                        <label for="icon_prefix">E-mail</label>
                                        </div>
                                    </div>
                                <hr>
                                <div class="card-action">
                                    <input type="submit" class="waves-effect waves-light btn-large teal" value="Send E-mail" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </main>
    <% include footer %>