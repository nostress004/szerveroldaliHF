<tr>
    <td style="width: 10%">
        <%= pizza.name %>
    </td>
    <td style="width: 20%">
        <img src="images/220px-Eq_it-na_pizza-margherita_sep2005_sml.jpg">
    </td>
    <td style="width: 50%">
        <%= pizza.description %>
    </td>
    <td style="width: 50%">
        $<%= pizza.price %>.00
    </td>
    <td>
        <a class="waves-effect waves-light btn right white-text" href="<%= '/pizza/'+ pizza._id +'/modify' %>">
            <i class="material-icons">create</i>
        </a>
    </td>
    <td style="width: 10%">
        <a class="waves-effect red btn right white-text" href="<%= '/pizza/'+ pizza._id +'/delete' %>">
            <i class="material-icons">delete</i>
        </a>
    </td>
</tr>